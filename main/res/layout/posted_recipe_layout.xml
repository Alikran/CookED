<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/descr_txt"
        android:layout_width="589dp"
        android:layout_height="109dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="77dp"
        android:text="Description"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_lbl" />

    <TextView
        android:id="@+id/rec_id"
        android:layout_width="356dp"
        android:layout_height="91dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="56dp"
        android:text="name"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recipe_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="80dp"
        android:text="Recipe Name:"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructions_txt"
        android:layout_width="600dp"
        android:layout_height="331dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="64dp"
        android:text="Instructions "
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="191dp"
        android:layout_height="88dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="120dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rate_btn"
        android:layout_width="172dp"
        android:layout_height="92dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="116dp"
        android:text="Rate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="1dp"
        android:text="Instructions"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/instructions_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descr_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>